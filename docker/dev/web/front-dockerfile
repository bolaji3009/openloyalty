FROM node:6

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ruby-full \
    build-essential \
    && gem install sass \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

RUN npm install -g yarn

WORKDIR /var/www/frontend

EXPOSE 8081

CMD ["sh", "-c", "yarn install && npm start"]
