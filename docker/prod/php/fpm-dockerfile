FROM php:7.1-fpm

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libicu-dev \
    libpq-dev \
    libmcrypt-dev \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    git \
    unzip \
    wget \
    supervisor \
    cron \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Configure extensions
RUN docker-php-ext-configure gd --with-freetype-dir=/usr/include/ --with-jpeg-dir=/usr/include/ \
    && docker-php-ext-configure pgsql -with-pgsql=/usr/include/postgresql/

# Install PHP extensions
RUN docker-php-ext-install \
    pdo \
    pgsql \
    pdo_pgsql \
    intl \
    zip \
    gd \
    mcrypt \
    bcmath

# Install Composer
COPY --from=composer:1.10 /usr/bin/composer /usr/bin/composer

# Install Phing
RUN wget https://www.phing.info/get/phing-latest.phar -O /usr/local/bin/phing && chmod +x /usr/local/bin/phing

WORKDIR /var/www/openloyalty

ENV SYMFONY_ENV="prod"

COPY ./docker/prod/php/conf/supervisord/ /etc/supervisord/
COPY ./docker/prod/php/conf/crontab.txt /var/crontab.txt
RUN crontab /var/crontab.txt

COPY ./backend /var/www/openloyalty
RUN mkdir -p var/cache var/logs var/sessions && chmod -R 777 var

COPY ./docker/prod/php/bin/init.sh init.sh
RUN chmod a+x init.sh && (rm web/app_dev.php || true) && composer install --no-dev -o --prefer-dist --ignore-platform-reqs && bin/console assets:install && (rm web/config.php || true) && chown -R www-data:www-data var

CMD ["./init.sh"]
